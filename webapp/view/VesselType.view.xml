<mvc:View
    xmlns:tnt="sap.tnt"
    xmlns:form="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    controllerName="nauticalfe.controller.VesselType"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
>
    <Page id="_IDGenPage1">
        <content>
            <ObjectHeader
                id="_IDGenObjectHeader1"
                title="Create Cargo Type"
                icon="sap-icon://form"
            />
            <Panel id="_IDGenPanel1">
                <Bar id="_IDGenBar1">
                    <contentLeft>
                        <!-- <Button click=".handleOpen" text="Show Dialog" ariaHasPopup="Dialog"/> -->
                        <Dialog
                            id="helloDialog"
                            resizable="true"
                            draggable="true"
                            title="Create Cargo Type"
                        >
                            <VBox
                                id="_IDGenVBox1"
                                class="dialogContent_Vbox"
                            >
                                <Label
                                    id="_IDGenLabel1"
                                    labelFor="charterCode"
                                    text="Cargo Code"
                                />
                                <Input
                                    id="charterCode"
                                    placeholder="code"
                                    width="190px"
                                    maxLength="4"
                                />
                                <Label
                                    id="_IDGenLabel2"
                                    labelFor="charterDesc"
                                    text="Cargo Description"
                                />
                                <Input
                                    id="charterDesc"
                                    placeholder="description"
                                    width="190px"
                                />
                            </VBox>

                            <footer>
                                <Toolbar id="_IDGenToolbar2">
                                    <ToolbarSpacer id="_IDGenToolbarSpacer2" />
                                    <Button
                                        id="_IDGenButton10"
                                        type="Emphasized"
                                        press="onCreateEntry"
                                        text="create"
                                        class="sapUiTinyMarginTop sapUiTinyMarginBottom"
                                    />
                                    <Button
                                        id="_IDGenButton9"
                                        type="Reject"
                                        press=".handleCloseCreate"
                                        text="cancel"
                                        class="sapUiTinyMarginTop sapUiTinyMarginBottom"
                                    />
                                </Toolbar>
                            </footer>
                        </Dialog>
                        <Dialog
                            id="helloDialog2"
                            resizable="true"
                            draggable="true"
                            title="Update Cargo Type"
                        >
                            <VBox
                                id="_IDGenVBox2"
                                class="dialogContent_Vbox"
                            >
                                <Label
                                    id="_IDGenLabel12"
                                    labelFor="charterCode2"
                                    text="Cargo Code"
                                />
                                <Input
                                    id="charterCode2"
                                    placeholder="code"
                                    width="190px"
                                    maxLength="4"
                                    editable="false"
                                />
                                <Label
                                    id="_IDGenLabel3"
                                    labelFor="charterDesc2"
                                    text="Cargo Description"
                                />
                                <Input
                                    id="charterDesc2"
                                    placeholder="description"
                                    width="190px"
                                />
                            </VBox>

                            <footer>
                                <Toolbar id="_IDGenToolbar1">
                                    <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                                    <Button
                                        id="_IDGenButton7"
                                        type="Emphasized"
                                        press=".onUpdate"
                                        text="update"
                                        class="sapUiTinyMarginTop sapUiTinyMarginBottom"
                                    />
                                    <Button
                                        id="_IDGenButton8"
                                        type="Reject"
                                        press=".handleCloseUpdate"
                                        text="cancel"
                                        class="sapUiTinyMarginTop sapUiTinyMarginBottom"
                                    />
                                </Toolbar>
                            </footer>
                        </Dialog>
                        <Button
                            id="_IDGenButton3"
                            text="New Entries"
                            press="onShowDialogForCreate"
                        />
                        <Button
                            id="_IDGenButton4"
                            text="Delete"
                            press="onDeleteVoyageType"
                        />

                        <Button
                            id="_IDGenButton6"
                            text="update"
                            press="onShowUpdateDialog"
                        />
                    </contentLeft>
                </Bar>
                <Table
                    id="createTypeTable"
                    mode="MultiSelect"
                    items="{/CARTYP}"
                    updateFinished="onTableUpdateFinished"
                    selectionChange="selectedItems"
                    width="90%"
                    backgroundDesign="Solid"
                >
                    <columns>
                        <Column id="_IDGenColumn1">
                            <Text
                                id="_IDGenText1"
                                text="Vessel Type"
                            />
                        </Column>
                        <Column id="_IDGenColumn2">
                            <Text
                                id="_IDGenText2"
                                text="Cargo Type Description"
                            />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="_IDGenColumnListItem1">
                            <cells>
                                <Input
                                    id="_IDGenInput1"
                                    value="{CARCD}"
                                    editable="false"
                                />
                                <Input
                                    id="_IDGenInput2"
                                    value="{CARDES}"
                                    editable="false"
                                />
                                <Button
                                    id="_IDGenButton1"
                                    icon="sap-icon://delete"
                                    press="onDeleteRow"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
                <!-- <Button id="_IDGenButton2" text="Add Row" press="updateTableRefresh" /> -->
            </Panel>
        </content>
    </Page>

    <!--scrollbar added-->
    <ScrollContainer
        id="_IDGenScrollContainer1"
        height="100%"
        width="100%"
        vertical="true"
        focusable="true"
    >
        <!--this is first page-->
    </ScrollContainer>
</mvc:View>
